{
	"name": "dan-wetherald-com",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"react": "^16.10.2",
		"react-dom": "^16.10.2",
		"react-scripts": "3.2.0"
	},
	"scripts": {
		"build:style": "tailwind build src/styles/index.css -o src/styles/tailwind.css",
		"start": "yarn run build:style && BROWSER=none PORT=3002 react-scripts start",
		"build": "yarn run build:style && react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject"
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [">0.2%", "not dead", "not op_mini all"],
		"development": ["last 1 chrome version", "last 1 firefox version", "last 1 safari version"]
	},
	"devDependencies": {
		"autoprefixer": "^9.6.4",
		"postcss-cli": "^6.1.3",
		"tailwindcss": "^1.1.2",
		"tailwindcss-transitions": "^2.1.0"
	},
	"prettier": {
		"bracketSpacing": true,
		"singleQuote": true,
		"semi": false,
		"useTabs": true,
		"printWidth": 120,
		"arrowParens": "avoid",
		"trailingComma": "es5",
		"jsxBracketSameLine": true
	}
}
